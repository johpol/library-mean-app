doctype html
html(ng-app='libraryApp')
    head
        link(href='/bower_components/bootstrap-css/css/bootstrap.min.css', rel='stylesheet')
        link(href='/bower_components/bootstrap-css/css/bootstrap-theme.min.css', rel='stylesheet')
        script(src='/bower_components/angular/angular.js')
        script(src='/js/core.js')
        script(src='/js/controllers/main.js')
        script(src='/js/services/libraryBooks.js')
    body(ng-controller='mainController')
        div(class='container')
            div(class='form-group')
                h1(class='text-center') Personal Library
            div(class='form-group')
                input(class='center-block' type='text', placeholder='ISBN', ng-model='formData.text')
            div(class='form-group')
                button(class='btn btn-primary center-block', ng-click='createBook()') Fetch My Book!
            div(class='form-group')
                div(class='input-group')
                    div(class='input-group-addon')
                        span(class='glyphicon glyphicon-search', aria-hidden='true')
                    input(type='text', class='form-control', placeholder='Search Libraray')
            table(class='table table-striped')
                thead
                    tr
                        th Title
                        th Author
                        th Publisher
                        th Subject
                        th Remove
                tbody
                    tr(ng-repeat='book in books')
                        td {{book.book}}
                        td {{book.author}}
                        td {{book.publisher}}
                        td {{book.subject}}
                        td
                            button(class='btn btn-danger', ng-click='deleteBook(book._id)') Remove
